{
    "name": "mongodb-debeziumtest-source",
    "config": {
        "connector.class" : "io.debezium.connector.mongodb.MongoDbConnector",
        "tasks.max" : "1",
        "topic.prefix": "mongoserver555",
        "mongodb.name" : "mongoserver555",
        "mongodb.hosts" : "debezium_rs/mongodb:27017",
        "mongodb.user" : "admin",
        "mongodb.password" : "admin",
        "mongodb.connection.string": "mongodb://admin:admin@mongodb:27017/?replicaSet=debezium_rs",
        "database.include.list" : "debeziumtest",
        "database.history.kafka.bootstrap.servers": "broker1:9093,broker2:9093,broker3:9093",
        "database.history.consumer.security.protocol": "SASL_PLAINTEXT",
        "database.history.consumer.sasl.mechanism": "PLAIN",
        "database.history.consumer.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"admin\" password=\"123456\";",
        "database.history.producer.security.protocol": "SASL_PLAINTEXT",
        "database.history.producer.sasl.mechanism": "PLAIN",
        "database.history.producer.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"admin\" password=\"123456\";",
        "transforms": "unwrap,route",
        "transforms.unwrap.type": "io.debezium.connector.mongodb.transforms.ExtractNewDocumentState",
        "transforms.unwrap.array.encoding": "document",
        "transforms.route.type" : "org.apache.kafka.connect.transforms.RegexRouter",
        "transforms.route.regex" : "([^.]+)\\.([^.]+)\\.([^.]+)",
        "transforms.route.replacement" : "$1_$2$3"
    }
}